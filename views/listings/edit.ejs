<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>Edit <%=listing.title%></h3>
    <form action="/listings/<%=listing.id%>?_method=PUT" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="title mb-3">
            <label for="Title" class="form-label">Title</label>
            <input type="text" value="<%= listing.title %>" name="listing[title]" required class="form-control">
            <div class="valid-feedback">Looks Good ! </div>
            <div class="invalid-feedback">Please Enter Title</div>
        </div>
        <div class="description mb-3">
            <label for="Description" class="form-label">Description</label>
            <textarea name="listing[description]" required class="form-control"><%= listing.description %></textarea>
            <div class="valid-feedback">Looks Good ! </div>
            <div class="invalid-feedback">Please Enter Description</div>
        </div>
        <div>
            Original Image <br>
            <img src="<%= org %>" alt="Listing Image">
        </div>
        <div class="image mb-3">
            <label for="Image-URL" class="form-label">Image-URL</label>
            <input type="file"  name="listing[image]" class="form-control">
        </div>
        <div class="price mb-3">
            <label for="Price" class="form-label">Price</label>
            <input type="number" name="listing[price]" required value="<%= listing.price %>"  class="form-control">
            <div class="valid-feedback">Looks Good ! </div>
            <div class="invalid-feedback">Please Enter Price</div>
        </div>
        <div class="row">
            <div class="country mb-3 col-md-4">
                <label for="Country" class="form-label">Country</label>
                <input type="text" required value="<%= listing.country %>"  name="listing[country]" class="form-control">
                <div class="valid-feedback">Looks Good ! </div>
                <div class="invalid-feedback">Please Enter Country</div>
            </div>
            <div class="location mb-3 col-md-8">
                <label for="Location" class="form-label">Location</label>
                <input type="text" value="<%= listing.location %>" required  name="listing[location]" class="form-control">
                <div class="valid-feedback">Looks Good ! </div>
                <div class="invalid-feedback">Please Enter Location</div>
            </div>
        </div>
        <button class="btn btn-dark">Update</button>
    </div>
    </div>
    </form>
</body>
